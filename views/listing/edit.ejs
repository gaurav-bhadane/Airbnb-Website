<%- layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h1>Edit Listing</h1><br>
    <h3>ID: <%= listings.id %></h3><br>
    <form method="post" action="/listings/<%= listings.id %>?_method=PUT">
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" class="form-control" name="title" value="<%= listings.title %>">
            <br>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea name="description" class="form-control"  cols="30" rows="3"><%= listings.description %></textarea>
            <br>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image:</label>
            <input type="text" name="image" class="form-control" value="<%= listings.image %>">
            <br>
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-label">Price:</label>
                <input type="text" name="price" class="form-control" value="<%= listings.price %>">
                <br>
            </div>
            <div class="mb-3 col-8">
                <label for="location" class="form-label">Location:</label>
                <input type="text" name="location" class="form-control" value="<%= listings.location %>">
                <br>
            </div>
        </div>
       
        <div class="mb-3">
            <label for="country" class="form-label">Country:</label>
            <input type="text" name="country" class="form-control" value="<%= listings.country %>">
            <br>
        </div>
        
        <button class="btn btn-dark add-btn mt-3">Edit</button>
        <br><br>
    </form>
</div>
</div>
</body>